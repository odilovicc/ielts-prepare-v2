.asidebar
    &-wrapper
        display flex
        flex-direction column
        justify-content space-between
        align-items center
        color var(--primary-color)
        background-color var(--text-color)
        min-height 100%
        padding-top 20px
        border-radius 20px
    &-logo
        font-size 24px
        font-weight 900
    &-link
        padding 20px
        &:hover
            cursor pointer

.mobile-navbar
    &-wrapper
        display flex
        align-items baseline
        background var(--text-color)
        justify-content space-between
        border-radius 20px
        width max-content
        border 3px solid var(--surface-color)
        
    &-left, &-right 
        display flex
    &-link
        padding 20px
        flex 1 1 
        display flex
        flex-direction column
        align-items center
        &:hover
            cursor pointer
    &-active
        padding 20px
        background var(--surface-color)
        border-radius 50px
        display flex
        align-items center
        justify-content center
        position relative
        top -15px // Поднимаем элемент вверх
        box-shadow 0px 4px 6px rgba(0, 0, 0, 0.2)
        color var(--text-color)